<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <View
        android:id="@+id/divider"
        android:layout_width="280dp"
        android:layout_height="23dp"
        android:background="@color/umc_fit"

        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.059" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="UMC FIT"
        android:textColor="@color/black"
        android:textSize="24sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.501"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.409" />

    <View
        android:id="@+id/divider3"
        android:layout_width="280dp"
        android:layout_height="23dp"
        android:background="@color/umc_fit"

        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.93" />

    <TableLayout
        android:layout_width="266dp"
        android:layout_height="231dp"

        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.75">

        <TableRow
            android:layout_margin="1.5px"
            android:background="@color/umc_fit">

            <TextView
                android:layout_width="119dp"
                android:layout_column="1"
                android:padding="3dip"
                android:text="IMC (kg/m²)" />

            <TextView
                android:layout_width="139dp"
                android:gravity="right"
                android:padding="3dip"
                android:text="Classificação" />
        </TableRow>

        <TableRow>

            <TextView
                android:layout_width="119dp"
                android:layout_column="1"
                android:padding="3dip"
                android:text="Menor que 18,5" />

            <TextView
                android:layout_width="139dp"
                android:gravity="right"
                android:padding="3dip"
                android:text="Magreza" />
        </TableRow>

        <TableRow>

            <TextView
                android:layout_width="119dp"
                android:layout_column="1"
                android:padding="3dip"
                android:text="18,5 a 24,9" />

            <TextView
                android:layout_width="139dp"
                android:gravity="right"
                android:padding="3dip"
                android:text="Peso normal" />
        </TableRow>

        <TableRow>

            <TextView
                android:layout_width="119dp"
                android:layout_column="1"
                android:padding="3dip"
                android:text="25 a 29,9" />

            <TextView
                android:layout_width="139dp"
                android:gravity="right"
                android:padding="3dip"
                android:text="Sobrepeso" />
        </TableRow>

        <TableRow>

            <TextView
                android:layout_width="119dp"
                android:layout_column="1"
                android:padding="3dip"
                android:text="30 a 34,9" />

            <TextView
                android:layout_width="139dp"
                android:gravity="right"
                android:padding="3dip"
                android:text="Obesidade grau I" />
        </TableRow>

        <TableRow>

            <TextView
                android:layout_width="119dp"
                android:layout_column="1"
                android:padding="3dip"
                android:text="35 a 40" />

            <TextView
                android:layout_width="139dp"
                android:gravity="right"
                android:padding="3dip"
                android:text="Obesidade grau II" />
        </TableRow>

        <TableRow>

            <TextView
                android:layout_width="119dp"
                android:layout_column="1"
                android:padding="3dip"
                android:text="Maior que 40" />

            <TextView
                android:layout_width="139dp"
                android:gravity="right"
                android:padding="3dip"
                android:text="Obesidade grau III" />
        </TableRow>
    </TableLayout>

    <ImageView
        android:id="@+id/imageView2"
        android:layout_width="143dp"
        android:layout_height="140dp"
        app:layout_constraintBottom_toBottomOf="parent"

        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.502"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.176"
        app:srcCompat="@drawable/logo" />


</androidx.constraintlayout.widget.ConstraintLayout>